<form
  action="/celebrities/edit/{{celebrity.id}}"
  method="POST"
  class="container mt-5"
>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{celebrity.name}}"
    />
  </div>
  <div class="mb-3">
    <label for="occupation" class="form-label">Occupation</label>
    <input
      type="text"
      class="form-control"
      id="occupation"
      name="occupation"
      value="{{celebrity.occupation}}"
    />
  </div>
  <div class="mb-3">
    <label for="catchPhrase" class="form-label">catchPhrase</label>
    <input
      type="text"
      class="form-control"
      id="catchPhrase"
      name="catchPhrase"
      value="{{celebrity.catchPhrase}}"
    />
  </div>
  <button type="submit" class="btn btn-primary">Edit Celebrity</button>
</form>
