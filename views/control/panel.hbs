<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each users as |user|}}
      <tr>
        <td>{{user.id}}</td>
        <td>{{user.nombre}}</td>
        <td>{{user.email}}</td>
        <td>
          <form action="/users/delete/{{user.id}}" method="POST">
            <button type="submit">Despedir</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
